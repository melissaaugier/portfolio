<div class="offcanvas offcanvas-bottom project-offcanvas" id="projectOffcanvas<%= index %>" tabindex="-1" aria-labelledby="projectOffcanvasLabel<%= index %>" data-index="<%= index %>">
  <div class="offcanvas-header">
    <button type="button" class="btn-close close-offcanvas" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body custom-offcanvas-body py-5" data-offcanvas-scroll-target="offcanvasBody">
    <div class="container pt-5">
      <div class="row">
        <h2 class="col-8 offcanvas-title" id="projectOffcanvasLabel<%= index %>">
          <strong><%= project.title %></strong>
          &nbsp;-&nbsp;<%= project.description %>
        </h2>
        <div class="col-4 d-flex flex-column align-items-end gap-2 mt-4">
          <% project.tools.pluck(:name).each do |tool| %>
            <span class='badge badge-pill badge-light badge-xl'><%= tool %></span>
          <% end %>
        </div>
      </div>
      <div class="row">
          <%= render 'projects/partials/roles', project: project %>
      </div>
    </div>
    <div class="container">
      <div class="offcanvas-scroll-content mt-4">
        <%= render "projects/modals/#{project.pseudo}", index:, project: %>
      </div>
    </div>
  </div>
</div>