<div class="container">
  <div class="row g-5 mb-5">
    <%= image_tag 'weatherai-main-photo.webp', alt: "Weather AI main appearance", class: 'w-100' %>
  </div>

  <div class="row g-5">
    <div class="col-12 col-lg-6">
      <%= image_tag 'weatherai-2.webp', alt: 'weatherai tablet format', class: 'w-100' %>
      <div class="p-3 d-flex align-items-center justify-content-between my-5">
        <div class="col-md-5 col-lg-4">
          <div class="horizontal-line"></div>
        </div>
        <div class="col-md-7 col-lg-8 pt-3">
