<div class="container-fluid">
  <div class="row min-vh-80">
    <!-- Left Column -->
    <div class="col-12 col-md-6 p-5 d-flex flex-column justify-content-center">
      <div class="d-flex flex-column justify-content-around gap-3">
        <h1 class="mr-2">I'm Melissa Augier.</h1>
        <h2>Crafting seamless web experiences, one Rails app at a time!</h2>
      </div>
    </div>

    <!-- Right Column -->
    <div class="col-12 col-md-6 px-4 px-md-3 px-lg-5 d-flex align-items-center">
      <div class="w-100 px-4 px-md-3 px-lg-5">
        <h3 class="mb-5">Recent projects</h3>
        <ul class="list-group list-group-flush list-projects py-2">
          <% Project.all.each_with_index do |project, index| %>
            <%= link_to "#", class: 'list-group-item d-flex justify-content-between align-items-center', data: { bs_toggle: "offcanvas", bs_target: "#projectOffcanvas#{index}" } do %>
              <span><%= project.title %></span>
              <div class="d-flex gap-2 text-end">
                <div>
                  <% project.tools.pluck(:name).each do |tool| %>
                    <span class='badge badge-pill badge-light'><%= tool %></span>
                  <% end %>
                </div>
                <span class="arrow">â†’</span>
              </div>
            <% end %>

            <!-- Offcanvas for Each Project -->
            <%= render 'projects/partials/offcanvas', project:, index: %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= render 'projects/partials/banner' %>
