<head>
  <%= render "projects/partials/google_analytics" %>

  <title>Melissa Agr - Développeuse Ruby on Rails & JavaScript</title>
  <meta name="description" content="Melissa Agr, développeuse spécialisée en Ruby on Rails, JavaScript et en formation sur React. Découvrez mon portfolio et mes projets.">
  <meta name="keywords" content="Développeur, Ruby on Rails, JavaScript, React, Web, Backend, Frontend, Portfolio">
  <meta name="author" content="Melissa Augier">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="canonical" href="https://www.melissaagr.com">

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Open Graph / Facebook / LinkedIn / WhatsApp -->
  <meta property="og:title" content="Melissa Augier - Développeuse Ruby on Rails & JavaScript">
  <meta property="og:description" content="Découvrez mon portfolio et mes projets en Ruby on Rails, JavaScript et React.">
  <meta property="og:image" content="<%= image_url('melissaagr-preview.jpeg') %>" />
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="Aperçu du portfolio de Melissa Agr">
  <meta property="og:url" content="https://www.melissaagr.com">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Melissa Agr">
  <meta property="og:locale" content="fr_FR">

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="Melissa Agr - Développeuse Ruby on Rails & JavaScript">
  <meta name="twitter:description" content="Découvrez mon portfolio et mes projets en Ruby on Rails, JavaScript et React.">
  <meta name="twitter:image" content="<%= image_url('melissaagr-preview.jpeg') %>">
  <meta name="twitter:image:alt" content="Aperçu du portfolio de Melissa Agr">
  <meta name="twitter:site" content="@MelissaAgr">

  <!-- Favicon -->
  <%= favicon_link_tag 'logo.png', type: 'image/x-icon' %>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <!-- CSS & JS -->
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>

  <!-- Performances -->
  <link rel="preload" href="https://www.melissaagr.com/images/portfolio-preview.webp" as="image">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Alternative pour WebP -->
  <meta property="og:image" content="https://www.melissaagr.com/images/portfolio-preview.webp">
  <meta property="og:image:type" content="image/webp">
</head>
